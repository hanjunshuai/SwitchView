<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchView">
        <attr name="bgColor" format="color|reference" />
        <attr name="leftColor" format="color|reference" />
        <attr name="rightColor" format="color|reference" />
        <attr name="textLeftColor" format="color" />
        <attr name="textRightColor" format="color" />
        <attr name="textLeftClickColor" format="color" />
        <attr name="textRightClickColor" format="color" />
        <attr name="textLeft" format="string" />
        <attr name="textRight" format="string" />
        <attr name="setChecked" format="boolean" />
        <attr name="padding" format="dimension" />
        <attr name="time" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircleMenu">
        <attr name="pc_radius" format="dimension|reference" />
        <attr name="pc_anim_duration" format="integer" />
        <attr name="pc_open_direction">
            <enum name="RIGHT" value="1" />
            <enum name="LEFT" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="CircleButton">
        <attr name="pb_text_on" format="string" />
        <attr name="pb_text_off" format="string" />
        <attr name="pb_color" format="color|reference" />
        <attr name="pb_color_checked" format="color|reference" />
        <attr name="pb_background" format="reference" />
        <attr name="pb_background_checked" format="reference" />
        <attr name="pb_checkable" format="boolean" />
    </declare-styleable>
</resources>